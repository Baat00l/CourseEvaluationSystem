@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model CourseEvaluationSystem.Models.Evaluation

<h2>Lämna utvärdering</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CourseID" class="control-label">Kurs</label>
        <select asp-for="CourseID" class="form-control" asp-items="ViewBag.CourseID"></select>
    </div>

    <div class="form-group">
        <label asp-for="StudentID" class="control-label">Student</label>
        <select asp-for="StudentID" class="form-control" asp-items="ViewBag.StudentID">
            <option value="">Välj student</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Rating" class="control-label">Betyg (1-5)</label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comment" class="control-label">Kommentar</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Spara</button>
</form>
