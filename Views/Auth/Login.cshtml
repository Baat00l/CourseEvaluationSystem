<h2>Logga in</h2>
<form method="post">
    <input name="username" class="form-control" placeholder="Användarnamn" />
    <br />
    <input name="password" type="password" class="form-control" placeholder="Lösenord" />
    <br />
    <button class="btn btn-primary">Logga in</button>
    @if (ViewBag.Error != null)
    {
        <p class="text-danger">@ViewBag.Error</p>
    }
</form>
